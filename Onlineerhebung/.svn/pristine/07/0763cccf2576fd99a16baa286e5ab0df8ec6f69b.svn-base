/* MESSAGES AND ERRORS */

.message {
    background: #f3f8fc url(../images/skin/information.png) 8px 50% no-repeat;
    border: 1px solid #b2d1ff;
    color: #006dba;
    margin: 10px 0 5px 0;
    padding: 5px 5px 5px 30px
}

div.errors {
    background: #fff3f3;
    border: 1px solid red;
    color: #cc0000;
    margin: 10px 0 5px 0;
    padding: 5px 0 5px 0;
}
div.errors ul {
    list-style: none;
    padding: 0;
}
div.errors li {
	background: url(../images/skin/exclamation.png) 8px 0% no-repeat;
    line-height: 16px;
    padding-left: 30px;
}

td.errors select {
    border: 1px solid red;
}
td.errors input {
    border: 1px solid red;
}

/* TABLES */

table {
    border: 1px solid #ccc;
    width: 100%
}
tr {
    border: 0;
}
td, th {
    font: 11px verdana, arial, helvetica, sans-serif;
    line-height: 12px;
    padding: 5px 6px;
    text-align: left;
    vertical-align: top;
}
th {
    background: #CCCCCC;
    color: #666;
    font-size: 11px;
    font-weight: bold;
    line-height: 17px;
    padding: 2px 6px;
}
th a:link, th a:visited, th a:hover {
    color: #333;
    display: block;
    font-size: 10px;
    text-decoration: none;
    width: 100%;
}
th.asc a, th.desc a {
    background-position: right;
    background-repeat: no-repeat;
}
th.asc a {
    background-image: url(../images/skin/sorted_asc.gif);
}
th.desc a {
    background-image: url(../images/skin/sorted_desc.gif);
}

.odd {
    background: #AAAAAA;
}
.even {
    background: #EEEEEE;
}

/* LIST */

.list {
	margin: 0px 0px 5px 0px;
	overflow: auto;
}

.list table {
    border-collapse: collapse;
}
.list th, .list td {
    border-left: 1px solid #ddd;
    border-bottom: 1px solid #ddd;
}
.list th:hover, .list tr:hover {
    background: #176E65;
}

.list .button {
	font-size: 10px;
	color:#000;
	background-color: #E6E6E6;
	text-decoration:none;
	padding:1px;
	border:1px solid #DDD;
	text-align:center;
	cursor: default
}

.list .button:hover {
	border-color:#000000;
}

/* PAGINATION */

.paginateButtons {
    background: #CCCCCC;
    border: 1px solid #ccc;
    border-top: 0;
    color: #666;
    font-size: 10px;
    overflow: hidden;
    padding: 10px 3px;
}

.paginateButtons a {
    margin: 0 3px;
    padding: 2px 6px;
	color:#000;
	background-color: #E6E6E6;
	text-decoration:none;
	border:1px solid #DDD;
	text-align:center;
}

.paginateButtons a:hover {
	border-color:#000000;
}

.paginateButtons span {
    padding: 2px 3px;
}

.block {
	display: block;
}

.bold {
	font-weight: bold !important;
}

.abstand-links-kurz {
	margin-left: 50px;
}