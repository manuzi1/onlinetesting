/* Reset */
* {
	padding: 0;
	margin: 0;
	border: 0;
}

/* Globals */
html {
	background: #fff;
	font-size: 100%;
}

body {
	background: #fff;
	font-size: 14px;
	font: 11px verdana, arial, helvetica, sans-serif;	
}

a, a:hover, a:visited {
	color: #000000 !important;
	font-weight: normal !important;
}

/* GENERAL */
#wrap {
	margin: 5px auto;
	text-align: left;
	width: 960px;
	position: relative;
}

#infobar {
	height: 100%;
	overflow: hidden;
	clear: both;
	background-color: #CCCCCC;
	font-weight: bold;
}

#infobar .element {
	display: block;
	float: left;
	padding: 6px 10px 10px 10px;
}

#infobar .element-first {
	display: block;
	float: left;
	padding: 6px 10px 10px 10px;
	margin: 0px 85px 0px 0px;
	background-color: #FC0300;
	color: #FFFFFF;
}		

#infobar .element-left {
	display: block;
	float: right;
	padding: 4px 2px 4px 10px;
	margin: 0px 0px 0px 85px;
}

#infobar .element-right {
	display: block;
	float: right;
	padding: 6px 10px 10px 2px;
}

#navigation {
	height: 100%;
	overflow: hidden;
}

#content {
	height: 100%;
	overflow: hidden;
	clear: both;
	padding: 0px 0px 8px 0px;
}

#info {
	height: 100%;
	overflow: hidden;
	clear: both;
}

h1 {
	height: 100%;
	overflow: hidden;
	font-size: 18px;
	padding: 5px;
}

h2 {
	height: 100%;
	overflow: hidden;
	clear: both;
	color: #FFFFFF;
	background-color: #176E65;
	margin: 5px 0px 5px 0px;
	padding: 5px;
	font-size: 16px;
}

.panel {
	height: 100%;
	overflow: hidden;
	clear: both;
	background-color: #CCCCCC;
	margin: 5px 0px 10px 0px;
	padding: 20px;
}

.float-left {
	float: left;
}

.float-right {
	float: right;
}

.nofloat {
	clear: both;
	height: 0;
}

p .nofloat {
	height: 100%;
	overflow: hidden;
}

.logout {
	margin: 0px 0px 0px 30px;
}

span.fehlerhinweis {
/*	border: 1px solid red;*/
	margin-top: 5px !important;
	background: url(../images/fehlerhinweis_klein.png) left top;
}

span.fehlerhinweisStub {
	display: block;
	width: 10px;
	height: 18px;
}

.invisible {
	display: block;
	width: 0px;
	height: 0px;
	visibility: hidden;
	font-size: 0px;
}

td a:link, td a:visited, td a:hover {
    color: #333;
    display: block;
    font-size: 10px;
    text-decoration: none;
    width: 100%;
}

